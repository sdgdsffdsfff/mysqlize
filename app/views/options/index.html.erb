<div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Default values 
    </label>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Short options 
    </label>
  </div>
</div>
<textarea class="field span12" rows="3">mysqldump
<% @default_values.each do |default| %>
  <%= default.long_option.split("=")[0] + '=' + default.default_value %>
<% end %>
</textarea>
<h1>Listing options</h1>
Total options: <%= @options.count %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Long option</th>
      <th>Short option</th>
      <th>Option file</th>
      <th>Default</th>
      <th>Description</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.name %></td>
        <td><%= option.long_option %></td>
        <td><%= option.short_option %></td>
        <td><%= option.option_file %></td>
        <td><%= option.default_value %></td>
        <td><%= (option.description.to_s.length >= 45) ? option.description[0..17] + "..." + option.description.last(25) : option.description %></td>
        <td><%= option.category_id %></td>
        <td><%= link_to 'Show', option %></td>
        <td><%= link_to 'Edit', edit_option_path(option) %></td>
        <td><%= link_to 'Destroy', option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Option', new_option_path %>
